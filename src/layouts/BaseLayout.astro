---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <title>{title}</title>
  </head>
  <body
    data-theme='dim'
  >
    <slot />
  </body>
</html>
